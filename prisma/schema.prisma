// schema.prisma

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider  = "postgresql"
    url       = env("POSTGRES_PRISMA_URL")
}

model BandSetSong {
    id          String      @id @default(cuid())
    title       String
    description String?
    order       Int
    note        BandSetNote @relation(fields: [nodeId], references: [id])
    nodeId      String
    createdAt   DateTime    @default(now()) @map(name: "created_at")
    updatedAt   DateTime    @updatedAt @map(name: "updated_at")
}

model BandSetNote {
    id    String        @id @default(cuid())
    title String
    songs BandSetSong[]
}
